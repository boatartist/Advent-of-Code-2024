with open('input.txt', 'r') as f:
    lines = f.readlines()
reports = []
for line in lines:
    line = list(map(int, line.split(' ')))
    is_safe = True
    increasing = True if line[0] < line[1] else False
    index_to_remove = 0
    full = line[:]
    for index_to_remove in range(len(line)):
        line = full.copy()
        line.pop(index_to_remove)
        for i in range(len(line)-1):
            if (line[i] < line[i+1] and not increasing) or (line[i] > line[i+1] and increasing):
                is_safe = False
                break
            if not (1 <= abs(line[i]-line[i+1]) <= 3):
                is_safe = False
                break
        if is_safe:
            break
    reports.append(is_safe)

print(reports)
print(reports.count(True))
